{
  "name": "crypto-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for ChatGPT that fetches latest daily threads from r/BitcoinMarkets and r/ethereum",
  "type": "module",
  "scripts": {
    "dev": "netlify dev",
    "deploy": "netlify deploy --prod",
    "test": "node test/testMcp.mjs",
    "test:unit": "node test/reddit.test.mjs",
    "lint": "eslint . --fix",
    "format": "prettier --write ."
  },
  "keywords": [
    "mcp",
    "chatgpt",
    "reddit",
    "netlify",
    "edge-functions"
  ],
  "private": true,
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@th2025/eslint-config": "0.0.17",
    "eslint": "9.37.0",
    "eslint-config-prettier": "10.1.8",
    "netlify-cli": "^17.0.0",
    "prettier": "3.6.2",
    "prettier-plugin-organize-imports": "4.3.0"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-organize-imports"
    ]
  }
}
